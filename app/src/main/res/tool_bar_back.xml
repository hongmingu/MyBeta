<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btb_tb"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#9C27B0"
    android:elevation="4dp"
    android:outlineProvider="none"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_bluelogo"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/btb_fl_home"
            android:layout_marginStart="52dp"
            android:layout_width="52dp"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/btb_lav_home"
                app:lottie_rawRes="@raw/icon_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/btb_fl_notification"
            android:layout_marginStart="104dp"
            android:layout_width="52dp"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/btb_lav_notification"
                app:lottie_rawRes="@raw/icon_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"/>

        </FrameLayout>


        <FrameLayout
            android:id="@+id/btb_fl_search"
            android:layout_marginStart="156dp"
            android:layout_width="52dp"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/btb_lav_search"
                app:lottie_rawRes="@raw/icon_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btb_fl_user"
            android:layout_gravity="end"
            android:layout_marginEnd="0dp"
            android:layout_width="52dp"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/btb_lav_user"
                app:lottie_rawRes="@raw/icon_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"/>
        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.appcompat.widget.Toolbar>