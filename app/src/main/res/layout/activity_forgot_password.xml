<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgot_password_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ForgotPasswordActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/forgot_password_back_cl"
            android:layout_width="@dimen/front_back_wrapper_width"
            android:layout_height="@dimen/front_back_wrapper_height"
            android:background="@drawable/bg_white_clicked_10skyblue">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/front_back_icon_width"
                android:layout_height="@dimen/front_back_icon_width"
                android:background="@drawable/ic_back_skyblue100"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/forgot_password_init_cl"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="156dp">
            <androidx.appcompat.widget.AppCompatTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#202020"
                android:lineSpacingExtra="5sp"
                android:text="send confirm mail to yours"
                />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <androidx.appcompat.widget.AppCompatTextView

            android:id="@+id/forgot_password_text_tv"
            android:layout_gravity="center_horizontal|top"

            android:layout_marginTop="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#202020"
            android:lineSpacingExtra="5sp"
            android:text="enter your username or email"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/forgot_password_account_et"
            android:padding="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="280dp"
            android:layout_marginTop="@dimen/login_clear_edittext_username_margin_top"
            android:layout_height="48dp"
            android:hint="username or email"
            android:backgroundTint="@color/transparent">

        </androidx.appcompat.widget.AppCompatEditText>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/forgot_password_complete_cl"
            android:layout_width="@dimen/front_ok_btn_width"
            android:layout_height="@dimen/front_ok_btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/front_ok_btn_margin_top"
            android:background="@drawable/bg_darkblue_radius4dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/forgot_password_send_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="5sp"
                android:text="send"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal"
                android:textStyle="normal" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</ScrollView>