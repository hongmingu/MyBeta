<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/default12" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space
            android:layout_width="@dimen/default12"
            android:layout_height="match_parent" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/search_user_item_user_photo_civ"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@color/darkblue"/>
        <Space
            android:layout_width="@dimen/default12"
            android:layout_height="match_parent" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/search_user_item_full_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#202020"
                android:lines="1"
                android:lineSpacingExtra="5sp"
                android:text="Sana twice pretty"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/default8" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/search_user_item_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/black_70"
                android:lineSpacingExtra="4sp"
                android:text="twice_sana_unofficial
twice_sana_unofficial"
                />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <Space
            android:layout_width="@dimen/default12"
            android:layout_height="match_parent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/search_user_item_follow_iv"
            android:layout_gravity="bottom"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:background="@color/darkblue">

        </androidx.appcompat.widget.AppCompatImageView>
        <Space
            android:layout_width="@dimen/default12"
            android:layout_height="match_parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>