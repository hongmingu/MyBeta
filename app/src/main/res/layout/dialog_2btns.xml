<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_static_height"
        android:gravity="center"

        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:lineSpacingExtra="5dp"
        android:textSize="@dimen/text_big"
        android:background="@color/skyblue"

        android:text="Title" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_content_padding"
        android:gravity="center"
        android:textSize="@dimen/text_normal"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:lineSpacingExtra="5dp"
        android:background="@color/white"
        android:text="content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/skyblue_40"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_positive"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_static_height"
        android:textSize="@dimen/text_normal"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:gravity="center"
        android:textColor="@color/darkblue"
        android:lineSpacingExtra="5dp"
        android:text="OK"
        android:background="@drawable/bg_white_clicked_10skyblue"/>

    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/skyblue_40"/>

    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_negative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_static_height"
        android:gravity="center"
        android:textSize="@dimen/text_normal"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/black_40"
        android:lineSpacingExtra="5dp"
        android:text="cancel"
        android:background="@drawable/bg_white_clicked_10skyblue"/>
</LinearLayout>