<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/SkyBlue"
    android:elevation="4dp"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/toolbar_home"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_skyblue100_clicked_skyblue_bright">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/toolbar_certification"
            android:layout_marginStart="72dp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_skyblue100_clicked_skyblue_bright">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_certi1_press" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/toolbar_search"
            android:layout_marginStart="144dp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_skyblue100_clicked_skyblue_bright">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_search_default" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/toolbar_user"
            android:layout_gravity="end"
            android:layout_marginEnd="0dp"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_skyblue100_clicked_skyblue_bright">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_user_default" />
        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.appcompat.widget.Toolbar>